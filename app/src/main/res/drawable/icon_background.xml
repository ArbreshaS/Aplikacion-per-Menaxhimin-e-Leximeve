<!-- res/drawable/button_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom layer: Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3"/> <!-- Background color (light gray) -->
            <corners android:radius="4dp"/> <!-- Optional: rounded corners -->
        </shape>
    </item>
    <!-- Top layer: Border -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFff"/> <!-- Border color (black) -->
            <corners android:radius="4dp"/> <!-- Optional: rounded corners -->
        </shape>
    </item>
</layer-list>